@page
@model ProductSalesPoint.Pages.SaleItemList.CreateModel
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Create New Sale</h2>
<br />

<div class="border">
    <form method="Post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container" style="padding: 30px;">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="SaleItem.Product"></label>
                    </div>
                    <div class="col-sm-4">
                        <select class="col-sm-5 form-control" data-val="true" data-val-required="The Payment Method field is required."
                                id="Item_ProductId" title="Product" name="SaleItem.ProductId">
                            @foreach (var item in ViewBag.Products)
                            {
                                <option value="@item.Value">
                                    @item.Text
                                </option>
                            }
                        </select>
                    </div>
                    <span asp-validation-for="SaleItem.ProductId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="SaleItem.Quantity"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="SaleItem.Quantity" min="1" class="form-control" />
                    </div>
                    <span asp-validation-for="SaleItem.Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-sm-2">
                        <input type="submit" value="Create" class="btn btn-primary form-control" />
                    </div>
                    <div class="col-sm-2">
                        <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
