@page
@model ProductSalesPoint.Pages.SaleList.IndexModel
@{
    ViewData["Title"] = "Index";
}

<br />

<div class="container row">
    <div class="col-6">
        <h2 class="text-info">Sales Historic List</h2>
    </div>
</div>

@if(Model.Message != null)
{
    <div class="alert-info alert alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aira-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>
}

<form method="post">
    @if (Model.Sales.Count() > 0)
    {
        <br /><br />

        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(m => m.Sales.FirstOrDefault().Id)
                </th>
                <th>
                    @Html.DisplayName("Product List")
                </th>
                <th>
                    @Html.DisplayName("Total Quantity")
                </th>
                <th>
                    @Html.DisplayName("Total Price")
                </th>
            </tr>
            @foreach (var item in Model.Sales)
            {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Id)
            </td>
            <td>
                @{
                    String parameterValueName = item.ProductList();
                }
                @Html.DisplayFor(modelItem => parameterValueName)
            </td>
            <td>
                @{
                    int parameterValueQunatity = item.ProductQuantity();
                }
                @Html.DisplayFor(modelItem => parameterValueQunatity)
            </td>
            <td>
                @{
                    double parameterValue = item.TotalPrice();
                }
                @Html.DisplayFor(modelItem => parameterValue)
            </td>
        </tr>
            }
        </table>
    }
    else
    {
        <br /><br />
        <p>No Sale registered</p>
    }
</form>
